{
  "name": "cpp-class-view",
  "displayName": "cpp-class-view",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cpp-class-view.helloWorld",
        "title": "Hello World"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "classView",
          "name": "Class View"
        }
      ]
    },
    "configuration": {
      "title": "cpp-class-view",
      "properties": {
        "cpp-class-view.tools.clang": {
          "type": "string",
          "description": "Path to the clang executable"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/ffi-napi": "^4.0.10",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/stream-buffers": "^3.0.7",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "ffi-napi": "^4.0.3",
    "ref-array-napi": "^1.2.2",
    "ref-napi": "^3.0.3",
    "stream-buffers": "^3.0.3"
  }
}
